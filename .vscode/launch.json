{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS App",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/node_modules/.bin/nest",
        "args": ["start", "--debug", "--watch"],
        "cwd": "${workspaceFolder}",
        "protocol": "inspector",
        "env": {
          "NODE_ENV": "development"
        },
        "runtimeArgs": ["--nolazy"]
      }
    ]
  }
  